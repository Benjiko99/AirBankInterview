<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/pink_600</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="toolbarTextColor">@color/material_on_surface_emphasis_high_type</item>

        <item name="toolbarNavigationButtonStyle">@style/AppTheme.Toolbar.Button.Navigation</item>
    </style>

    <style name="AppTheme.ThemeOverlay.Toolbar" parent="">
        <item name="colorControlNormal">?toolbarTextColor</item>
        <item name="actionMenuTextColor">?toolbarTextColor</item>
    </style>

    <style name="AppTheme.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?toolbarTextColor</item>
    </style>

    <style name="AppTheme.CardView.Outlined" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/card_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>