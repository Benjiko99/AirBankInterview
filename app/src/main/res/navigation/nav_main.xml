<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/transactionListFragment">

    <fragment
        android:id="@+id/transactionListFragment"
        android:name="com.spiraclesoftware.airbankinterview.features.transaction.list.ui.TransactionListFragment"
        android:label="@string/transaction__list__title"
        tools:layout="@layout/transaction__list__fragment">
        <action
            android:id="@+id/action_transactionListFragment_to_transactionDetailFragment"
            app:destination="@id/transactionDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/transactionDetailFragment"
        android:name="com.spiraclesoftware.airbankinterview.features.transaction.detail.ui.TransactionDetailFragment"
        android:label="@string/transaction__detail__title"
        tools:layout="@layout/transaction__detail__fragment">
        <argument
            android:name="transactionId"
            app:argType="integer" />
    </fragment>

</navigation>