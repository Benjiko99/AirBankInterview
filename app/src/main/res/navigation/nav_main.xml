<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/transactionListFragment">

    <fragment
        android:id="@+id/transactionListFragment"
        android:name="com.spiraclesoftware.androidsample.ui.transactionlist.TransactionListFragment"
        android:label="@string/transaction__list__title"
        tools:layout="@layout/transaction__list__fragment">
        <action
            android:id="@+id/to_transaction_detail"
            app:destination="@id/transactionDetailFragment"
            app:enterAnim="@anim/nav_enter"
            app:exitAnim="@anim/nav_exit"
            app:popEnterAnim="@anim/nav_pop_enter"
            app:popExitAnim="@anim/nav_pop_exit" />

    </fragment>

    <fragment
        android:id="@+id/transactionDetailFragment"
        android:name="com.spiraclesoftware.androidsample.ui.transactiondetail.TransactionDetailFragment"
        android:label="-"
        tools:layout="@layout/transaction__detail__fragment">
        <argument
            android:name="transactionId"
            app:argType="integer" />
        <action
            android:id="@+id/to_text_input"
            app:destination="@id/inputFragment"
            app:enterAnim="@anim/nav_enter"
            app:exitAnim="@anim/nav_exit"
            app:popEnterAnim="@anim/nav_pop_enter"
            app:popExitAnim="@anim/nav_pop_exit" />
    </fragment>

    <fragment
        android:id="@+id/inputFragment"
        android:name="com.spiraclesoftware.androidsample.ui.textinput.TextInputFragment"
        tools:layout="@layout/text_input__fragment">
        <argument
            android:name="strategyType"
            app:argType="com.spiraclesoftware.androidsample.ui.textinput.TextInputType" />
        <argument
            android:name="requestKey"
            app:argType="string" />
        <argument
            android:name="initialValue"
            app:argType="string" />
    </fragment>

</navigation>