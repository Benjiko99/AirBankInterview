<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="amountText"
            type="String" />

        <variable
            name="dateText"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/content__spacing__small"
        android:paddingTop="@dimen/content__spacing__medium"
        android:paddingRight="@dimen/content__spacing__small">

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{dateText}'
            android:textAppearance="@style/TextAppearance.Transaction.Header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12:00, Fri, 15 May" />

        <TextView
            android:id="@+id/amountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{amountText}'
            android:textAppearance="@style/TextAppearance.Transaction.Header"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="- $49.99" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/content__spacing__medium"
            android:layout_marginBottom="@dimen/content__spacing__small"
            android:background="?colorOnSurface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/amountView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>